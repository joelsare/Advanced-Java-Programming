<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <description>Jsp_Ex03</description>
    <display-name>Jsp_Ex03</display-name>
    <servlet>
        <display-name>welcome</display-name>
        <servlet-name>welcome</servlet-name>
        <jsp-file>/welcome.jsp</jsp-file>
    </servlet>
    <servlet>
        <display-name>registration</display-name>
        <servlet-name>registration</servlet-name>
        <jsp-file>/registration.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>question</servlet-name>
        <jsp-file>/WEB-INF/Ask_a_question.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>questoin</servlet-name>
        <jsp-file>/WEB-INF/QuestionPage.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AnswerAQuestion</servlet-name>
        <jsp-file>/WEB-INF/AnswerAQuestion.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AnswerPage</servlet-name>
        <jsp-file>/WEB-INF/AnswerPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/Ask_a_question.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>questoin</servlet-name>
        <url-pattern>/QuestionPage.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnswerAQuestion</servlet-name>
        <url-pattern>/AnswerAQuestion.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnswerPage</servlet-name>
        <url-pattern>/AnswerPage.jsp</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>welcome.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.NumberFormatException</exception-type>
        <location>/WEB-INF/BadNumber.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/NoSuchPage.jsp</location>
    </error-page>
</web-app>
